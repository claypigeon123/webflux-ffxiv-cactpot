<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %boldRed(%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z', UTC}) %highlight(%-5level) [%boldYellow(%-60.60(%c{60}))]: %msg%n%throwable
            </Pattern>
        </layout>
    </appender>

    <root level="info">
        <appender-ref ref="Console" />
    </root>
</configuration>